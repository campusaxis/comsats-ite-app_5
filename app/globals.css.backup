    transition-timing-function: cubic-bezier(0.4, 0, 1, 1); /* easeIn */
  }
  
  .animate-ease-out {
    transition-timing-function: cubic-bezier(0, 0, 0.2, 1); /* easeOut */
  }
  
  .animate-ease-linear {
    transition-timing-function: linear;
  }
  
  .animate-ease-spring {
    transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.1); /* spring */
  }
  
  .animate-ease-bounce {
    transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55); /* bounce */
  }
  
  .animate-ease-elastic {
    transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55); /* elastic */
  }
  
