  /* ========================================
     CAMPUSAXIS MASTER STANDARDS (2025)
     Material 3 + Glassmorphism + Apple HIG + PWA
     ======================================== */
  
  /* 1. CampusAxis Brand Colors */
  :root {
    --campus-primary-light: #007BFF;
    --campus-primary-dark: #1F8FFF;
    --campus-accent-light: #0056b3;
    --campus-accent-dark: #1F8FFF;
    --campus-glass-light: rgba(255, 255, 255, 0.7);
    --campus-glass-dark: rgba(255, 255, 255, 0.05);
    --campus-blur-light: 15px;
    --campus-blur-dark: 25px;
  }
  
  .dark {
    --campus-primary: var(--campus-primary-dark);
    --campus-glass: var(--campus-glass-dark);
    --campus-blur: var(--campus-blur-dark);
  }
  
  :root:not(.dark) {
    --campus-primary: var(--campus-primary-light);
    --campus-glass: var(--campus-glass-light);
    --campus-blur: var(--campus-blur-light);
  }
  
  /* 2. Touch Target Utilities (44px minimum - Apple HIG) */
  .touch-target {
    min-height: 44px;
    min-width: 44px;
  }
  
  .touch-target-comfortable {
    min-height: 48px;
    min-width: 48px;
  }
  
  .touch-target-large {
    min-height: 56px;
    min-width: 56px;
  }
  
  /* 3. CampusAxis Glassmorphism */
  .campus-glass {
    background: var(--campus-glass);
    backdrop-filter: blur(var(--campus-blur)) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 300ms ease-in-out;
  }
  
  .dark .campus-glass {
    background: var(--campus-glass-dark);
    backdrop-filter: blur(var(--campus-blur-dark)) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .campus-glass:hover {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px) saturate(150%);
  }
  
  .dark .campus-glass:hover {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(30px) saturate(150%);
  }
  
  /* 4. Spacing Grid System (8px base) */
  .space-xs { margin: 8px; padding: 8px; }
  .space-sm { margin: 16px; padding: 16px; }
  .space-md { margin: 24px; padding: 24px; }
  .space-lg { margin: 32px; padding: 32px; }
  .space-xl { margin: 40px; padding: 40px; }
  .space-2xl { margin: 48px; padding: 48px; }
  .space-3xl { margin: 64px; padding: 64px; }
  
  /* 5. Content Width Standards (60-80 char) */
  .prose-optimal {
    max-width: 65ch;
  }
  
  .prose-min {
    max-width: 60ch;
  }
  
  .prose-max {
    max-width: 80ch;
  }
  
  /* 6. CampusAxis Button Styles */
  .campus-button-primary {
    background: var(--campus-primary-light);
    color: white;
    border-radius: 16px;
    padding: 12px 24px;
    min-height: 44px;
    font-weight: 600;
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    transition: all 200ms ease-in-out;
  }
  
  .campus-button-primary:hover {
    background: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 123, 255, 0.4);
  }
  
  .dark .campus-button-primary {
    background: var(--campus-primary-dark);
    box-shadow: 0 0 20px rgba(31, 143, 255, 0.5);
  }
  
  .dark .campus-button-primary:hover {
    background: var(--campus-primary-dark);
    opacity: 0.9;
    box-shadow: 0 0 25px rgba(31, 143, 255, 0.6);
  }
  
  /* 7. Accessibility Focus Rings (WCAG 2.1 AA) */
  .focus-ring-campus {
    outline: none;
  }
  
  .focus-ring-campus:focus-visible {
    outline: 2px solid var(--campus-primary);
    outline-offset: 2px;
    border-radius: 16px;
  }
  
  /* 8. Performance - GPU Acceleration */
  .gpu-accelerated {
    transform: translateZ(0);
    will-change: transform, opacity;
  }
  
  /* 9. Responsive Typography (Mobile-First) */
  .text-campus-h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
  }
  
  .text-campus-h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.3;
  }
  
  .text-campus-h3 {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 600;
    line-height: 1.4;
  }
  
  .text-campus-body {
    font-size: clamp(0.875rem, 2vw, 1rem);
    line-height: 1.6;
  }
  
  /* 10. Dark Mode Glow Effects */
  .dark .campus-glow {
    box-shadow: 0 0 20px rgba(31, 143, 255, 0.5);
  }
  
  .dark .campus-glow:hover {
    box-shadow: 0 0 30px rgba(31, 143, 255, 0.7);
  }
  
  /* 11. Loading States */
  .campus-skeleton {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.1) 25%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.1) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
  }
  
  /* 12. Smooth Scroll Behavior */
  html {
    scroll-behavior: smooth;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }