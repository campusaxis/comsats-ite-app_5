  /* Simplified 4-Class Glass System - Professional & Accessible */
  
  /* Primary Glass - Hero sections, major CTAs (high emphasis) */
  .glass-primary {
    background-color: rgb(255 255 255 / 0.3);
    backdrop-filter: blur(var(--glass-blur-lg)) saturate(var(--glass-saturation)) brightness(var(--glass-brightness));
    border: 1px solid rgb(255 255 255 / var(--glass-border-opacity));
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / var(--glass-shadow-opacity));
    transition: all 300ms cubic-bezier(0, 0, 0.2, 1);
  }

  .dark .glass-primary {
    background-color: rgb(255 255 255 / 0.15);
    border-color: rgb(255 255 255 / 0.12);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.2);
  }

  .glass-primary:hover {
    background-color: rgb(255 255 255 / 0.35);
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / calc(var(--glass-shadow-opacity) * 1.5));
  }

  .dark .glass-primary:hover {
    background-color: rgb(255 255 255 / 0.2);
  }

  /* Secondary Glass - Feature cards, content sections (medium emphasis) */
  .glass-secondary {
    background-color: rgb(255 255 255 / 0.25);
    backdrop-filter: blur(var(--glass-blur-md)) saturate(var(--glass-saturation));
    border: 1px solid rgb(255 255 255 / calc(var(--glass-border-opacity) * 0.8));
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / calc(var(--glass-shadow-opacity) * 0.8));
    transition: all 300ms cubic-bezier(0, 0, 0.2, 1);
  }

  .dark .glass-secondary {
    background-color: rgb(255 255 255 / 0.1);
    border-color: rgb(255 255 255 / 0.08);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.15);
  }

  .glass-secondary:hover {
    background-color: rgb(255 255 255 / 0.3);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / var(--glass-shadow-opacity));
  }

  .dark .glass-secondary:hover {
    background-color: rgb(255 255 255 / 0.15);
  }

  /* Subtle Glass - Backgrounds, subtle dividers (low emphasis) */
  .glass-subtle {
    background-color: rgb(255 255 255 / 0.15);
    backdrop-filter: blur(var(--glass-blur-sm)) saturate(120%);
    border: 1px solid rgb(255 255 255 / calc(var(--glass-border-opacity) * 0.5));
    transition: all 300ms cubic-bezier(0, 0, 0.2, 1);
  }

  .dark .glass-subtle {
    background-color: rgb(255 255 255 / 0.05);
    border-color: rgb(255 255 255 / 0.05);
  }

  /* Interactive Glass - Buttons, links, clickable cards (hover states) */
  .glass-interactive {
    background-color: rgb(255 255 255 / 0.25);
    backdrop-filter: blur(var(--glass-blur-md)) saturate(var(--glass-saturation));
    border: 1px solid rgb(255 255 255 / calc(var(--glass-border-opacity) * 0.8));
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / calc(var(--glass-shadow-opacity) * 0.8));
    transition: all 300ms cubic-bezier(0, 0, 0.2, 1);
    cursor: pointer;
  }

  .dark .glass-interactive {
    background-color: rgb(255 255 255 / 0.1);
    border-color: rgb(255 255 255 / 0.08);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.15);
  }

  .glass-interactive:hover {
    background-color: rgb(255 255 255 / 0.35);
    border-color: rgb(255 255 255 / 0.2);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / calc(var(--glass-shadow-opacity) * 1.2));
    transform: translateY(-0.125rem);
  }

  .dark .glass-interactive:hover {
    background-color: rgb(255 255 255 / 0.18);
    border-color: rgb(255 255 255 / 0.15);
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.2);
  }

  .glass-interactive:active {
    transform: translateY(0);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

