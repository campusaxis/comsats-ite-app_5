@import "tailwindcss";
@import "tw-animate-css";

/* Prevent horizontal scroll on mobile */
html, body {
  overflow-x: hidden !important;
  max-width: 100vw;
  width: 100%;
}

/* Ensure all containers respect viewport width */
* {
  box-sizing: border-box;
}

*:not(svg):not(path) {
  max-width: 100%;
}

/* Mobile navbar specific fixes */
@media (max-width: 768px) {
  [role="dialog"],
  [data-radix-dialog-content],
  .mobile-sheet-content {
    max-width: calc(100vw - 32px) !important;
    width: min(calc(100vw - 32px), 380px) !important;
    box-sizing: border-box !important;
  }
  
  /* Ensure navbar elements maintain proper sizing */
  .navbar-logo-container {
    flex-shrink: 0;
  }
  
  .navbar-logo {
    object-fit: contain;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
  }
  
  /* Prevent navbar logo collapse on small screens */
  .navbar-logo-wrapper {
    min-width: 32px;
    min-height: 32px;
  }
}

@media (min-width: 640px) {
  .navbar-logo-wrapper {
    min-width: 40px;
    min-height: 40px;
  }
}

@media (min-width: 1024px) {
  .navbar-logo-wrapper {
    min-width: 44px;
    min-height: 44px;
  }
}

/* 2025 Modern Animations */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes pulse-glow {
  0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
  50% { box-shadow: 0 0 30px rgba(59, 130, 246, 0.6); }
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes gradient-xy {
  0%, 100% { transform: translate3d(0, 0, 0); }
  25% { transform: translate3d(-5px, -5px, 0); }
  50% { transform: translate3d(-10px, 5px, 0); }
  75% { transform: translate3d(5px, -5px, 0); }
}

@keyframes magnetic {
  0% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-2px, -2px) scale(1.02); }
  100% { transform: translate(0, 0) scale(1); }
}

@keyframes neon-pulse {
  0%, 100% { 
    text-shadow: 0 0 5px currentColor, 0 0 10px currentColor, 0 0 15px currentColor;
  }
  50% { 
    text-shadow: 0 0 2px currentColor, 0 0 5px currentColor, 0 0 8px currentColor;
  }
}

@keyframes apple-glass-pulse {
  0%, 100% { 
    backdrop-filter: blur(12px) saturate(150%);
    background: rgba(255, 255, 255, 0.25);
  }
  50% { 
    backdrop-filter: blur(14px) saturate(160%);
    background: rgba(255, 255, 255, 0.3);
  }
}

@keyframes apple-glass-depth {
  0%, 100% { 
    transform: translateZ(0);
  }
  50% { 
    transform: translateZ(5px);
  }
}

@keyframes ripple {
  to {
    transform: translate(-50%, -50%) scale(4);
    opacity: 0;
  }
}

@keyframes firework {
  0% { transform: translate(0, 0); width: 4px; height: 4px; opacity: 1; }
  50% { opacity: 1; }
  100% { 
    transform: translate(var(--x), var(--y)); 
    width: 2px; 
    height: 2px; 
    opacity: 0; 
  }
}

.animate-ripple {
  animation: ripple 0.6s linear;
}

.float {
  animation: float 6s ease-in-out infinite;
}

.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

.shimmer {
  position: relative;
  overflow: hidden;
}

.shimmer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  animation: shimmer 2s infinite;
}

.gradient-animation {
  animation: gradient-xy 4s ease infinite;
  background-size: 400% 400%;
}

.magnetic {
  animation: magnetic 2s ease-in-out infinite;
}

.neon-text {
  animation: neon-pulse 2s ease-in-out infinite alternate;
}

.apple-glass {
  animation: apple-glass-pulse 4s ease-in-out infinite;
}

.firework {
  --x: 0px;
  --y: 0px;
  animation: firework 1s ease-out forwards;
}

